<a href="#sign_up" uk-toggle>Sign Up</a>

<!-- This is the modal -->
<div id="sign_up" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <h2 class="uk-modal-title">Body Book</h2>
         <legend class="uk-legend">Sign Up</legend>
        <form class="signup">
             <div class="uk-margin">
            <input class="uk-input" id="email-input" type="text" placeholder="Email">
        </div> 
        <div class="uk-margin">
            <input class="uk-input" id="password-input" type="text" placeholder="Password">
        </div>
        <div class="uk-margin">
            <input class="uk-input" id="passConfirm"type="text" placeholder="Confirm Password">
        </div>
        </form>
         <p class="uk-text-center">
            <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
            <button class="uk-button uk-button-primary" type="button">Sign Up</button>
        </p>
        
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
 <script type="text/javascript" src="js/signup.js"></script>